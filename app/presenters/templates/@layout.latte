<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">

	<title>{ifset title}{include title|striptags} | {/ifset}Nette Sandbox</title>

	{if $parameters['development'] === TRUE}
		<!-- build:css {$basePath}/style/app.min.css -->
		<link rel="stylesheet" media="screen" href="{$basePath}/style/main.css" type="text/css">
		<!-- endbuild -->
	{else}
		<link rel="stylesheet" media="screen" href="{$basePath}/style/app.min.css?{$parameters['version']}" type="text/css">
	{/if}


	<link rel="shortcut icon" href="{$basePath}/favicon.ico" type="image/x-icon">

	<meta name="viewport" content="width=device-width, initial-scale=1">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">

	{if $parameters['development'] === TRUE}
		<!-- build:js {$basePath}/js/app.min.js -->
		<script src="{$basePath}/components/jquery/dist/jquery.min.js" type="text/javascript"></script>
		<script src="{$basePath}/components/bootstrap/js/alert.js" type="text/javascript"></script>
		<script src="{$basePath}/components/bootstrap/js/button.js" type="text/javascript"></script>
		<script src="{$basePath}/components/bootstrap/js/dropdown.js" type="text/javascript"></script>
		<script src="{$basePath}/components/bootstrap/js/modal.js" type="text/javascript"></script>
		<script src="{$basePath}/components/bootstrap/js/tooltip.js" type="text/javascript"></script>
		<script src="{$basePath}/components/bootstrap/js/popover.js" type="text/javascript"></script>
		<script src="{$basePath}/components/bootstrap/js/tab.js" type="text/javascript"></script>
		<script src="{$basePath}/components/bootstrap/js/transition.js" type="text/javascript"></script>
		<script src="{$basePath}/components/bootstrap/js/collapse.js" type="text/javascript"></script>
		<script src="{$basePath}/components/nette.ajax.js/nette.ajax.js" type="text/javascript"></script>
		<script src="//nette.github.io/resources/js/netteForms.min.js" type="text/javascript"></script>
		<script src="{$basePath}/js/topfix.js" type="text/javascript"></script>
		<script src="{$basePath}/js/main.js" type="text/javascript"></script>
		<!-- endbuild -->
	{else}
		<script src="{$basePath}/js/app.min.js?{$parameters['version']}" type="text/javascript"></script>
	{/if}



	<link rel="shortcut icon" href="{$basePath}/favicon.ico">
	{block head}{/block}
</head>

<body>


	{if $user->isLoggedIn()}
		{include './@header.latte'}
	{/if}
	<div class="container">

		<div class="topfix" data-topfix-offset="20">
			<div n:foreach="$flashes as $flash" class="alert alert-{$flash->type}">{$flash->message}</div>
			<div class="alert alert-danger">ahoj</div>
		</div>

		{include content}
	</div>



	{block scripts}

	{/block}
</body>
</html>
